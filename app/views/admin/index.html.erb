<h1><center>Little Esty Shop<center></h1>

<h2>Admin Dashboard</h2>

<%= link_to "Dashboard", admin_index_path %>
<%= link_to "Merchants", admin_merchants_path %>
<%= link_to "Invoices", admin_invoices_path %>

<section id="top_customers">
<h3>Top 5 Customers</h3>
<ol>
  <% @top_5_customers.each do |customer| %>
    <li><%="#{customer.first_name} #{customer.last_name} - #{customer.count_result} purchases"%></li>
  <% end %>
</ol>
</section>

<section id="incomplete_invoices">
<h3>Incomplete Invoices</h3>
<ul>
  <% @incomplete_invoices.each do |invoice| %>
    <li><%=link_to "Invoice ##{invoice.id} - #{invoice.created_at.strftime("%A, %B %d, %Y")}", "/admin/invoices/#{invoice.id}"%></li>
  <% end %>
</ul>
</section>