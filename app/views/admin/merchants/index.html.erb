<h1><center>Little Esty Shop<center></h1>

<h2>Admin Dashboard</h2>

<%= link_to "Dashboard", admin_index_path %>
<%= link_to "Merchants", admin_merchants_path %>
<%= link_to "Invoices", admin_invoices_path %>
<%= link_to "Create a new merchant", new_admin_merchant_path %><br><br>

<div id="enabled_merchants">
  <h3>Enabled Merchants</h3>
  <% @enabled_merchants.each do |merchant| %>
    <a name="<%merchant.name%>"> <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></a>
    <%= button_to "disable", "merchants/#{merchant.id}?status=disabled", method: :patch, id: merchant.id, params: {"merchant[status]" => 'disabled'} %>
  <% end %>    
</div>


<div id="disabled_merchants">
  <h3>Disabled Merchants</h3>
  <% @disabled_merchants.each do |merchant| %>
    <a name="<%merchant.name%>"> <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></a>
    <%= button_to "enable", "merchants/#{merchant.id}?status=enabled", method: :patch, id: merchant.id, params: { "merchant[status]" => 'enabled'} %>
  <% end%>
</div>

